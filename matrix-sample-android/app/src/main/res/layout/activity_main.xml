<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.tencent.matrix.sample.MainActivity">

    <Button
        android:id="@+id/test_leak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test leak"/>

    <Button
        android:id="@+id/test_trace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/test_leak"
        android:text="test trace"/>

    <Button
        android:id="@+id/test_io"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/test_trace"
        android:text="test io"/>

    <Button
        android:id="@+id/test_sqlite_lint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/test_io"
        android:text="test SQLiteLint"/>

    <Button
        android:id="@+id/test_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/test_sqlite_lint"
        android:text="test Battery"/>
    <Button
        android:id="@+id/killself"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/test_io"
        android:text="kill self"/>

    <Button
        android:id="@+id/test_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取设备信息"/>
</LinearLayout>
